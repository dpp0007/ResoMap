<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.communityhub.ui.controllers.RequesterDashboardController">
   
   <top>
      <VBox styleClass="modern-header">
         <children>
            <!-- Main Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="32.0" styleClass="navbar">
               <children>
                  <!-- Logo Section -->
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <Label text="⌂" styleClass="app-logo" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                        <VBox spacing="2.0">
                           <children>
                              <Label text="ResoMap" styleClass="app-title" />
                              <Label text="Resource Management" styleClass="app-subtitle" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Navigation Items -->
                  <HBox spacing="8.0" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="dashboardBtn" text="▣ Dashboard" styleClass="nav-button, active" onAction="#showDashboard" focusTraversable="true" />
                        <Button fx:id="resourcesBtn" styleClass="nav-button" onAction="#showResources" focusTraversable="true">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                 <image>
                                    <Image url="@../assets/icons/resources.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <text>Resources</text>
                        </Button>
                        <Button fx:id="requestsBtn" text="☰ My Requests" styleClass="nav-button" onAction="#showRequests" focusTraversable="true" />
                     </children>
                  </HBox>
                  
                  <!-- User Section -->
                  <HBox alignment="CENTER_RIGHT" spacing="16.0">
                     <children>
                        <VBox alignment="CENTER_RIGHT" spacing="2.0">
                           <children>
                              <Label fx:id="welcomeLabel" text="Welcome, User" styleClass="user-name" />
                              <Label text="Request resources and track your needs" styleClass="user-role" />
                           </children>
                        </VBox>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="⎋ Logout" focusTraversable="true" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;">
         <content>
            <VBox spacing="32.0">
               <children>
                  
                  <!-- Hero Action Section -->
                  <VBox alignment="CENTER" spacing="24.0" styleClass="hero-section">
                     <children>
                        <Label text="Ready to get help?" styleClass="hero-title" />
                        <Label text="Create a new request to access community resources and support" styleClass="hero-subtitle" />
                        <Button fx:id="newRequestBtn" mnemonicParsing="false" onAction="#showNewRequest" 
                                styleClass="cta-button" text="Create New Request" focusTraversable="true">
                           <graphic>
                              <Label text="＋" styleClass="button-icon" />
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
                  
                  <!-- Enhanced Statistics Dashboard -->
                  <VBox spacing="20.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12.0">
                           <children>
                              <Label text="▤" styleClass="section-icon" />
                              <Label text="Your Overview" styleClass="section-heading" />
                           </children>
                        </HBox>
                        
                        <HBox spacing="24.0">
                           <children>
                              <!-- Available Resources Card -->
                              <VBox styleClass="modern-stat-card, stat-primary" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <VBox alignment="CENTER" spacing="8.0">
                                       <children>
                                          <Label text="■" styleClass="stat-icon" />
                                          <Label fx:id="resourceCountLabel" text="0" styleClass="stat-number-large" />
                                       </children>
                                    </VBox>
                                    <VBox alignment="CENTER" spacing="4.0">
                                       <children>
                                          <Label text="Available Resources" styleClass="stat-title" />
                                          <Label text="Resources you can request" styleClass="stat-description" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- My Requests Card -->
                              <VBox styleClass="modern-stat-card, stat-secondary" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <VBox alignment="CENTER" spacing="8.0">
                                       <children>
                                          <Label text="☰" styleClass="stat-icon" />
                                          <Label fx:id="requestCountLabel" text="0" styleClass="stat-number-large" />
                                       </children>
                                    </VBox>
                                    <VBox alignment="CENTER" spacing="4.0">
                                       <children>
                                          <Label text="My Requests" styleClass="stat-title" />
                                          <Label text="Your active requests" styleClass="stat-description" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- My Requests Section -->
                  <VBox spacing="16.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                           <children>
                              <Label text="My Requests" styleClass="heading-3">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <ComboBox fx:id="statusFilter" promptText="All Status" styleClass="combo-box" prefWidth="150.0" onAction="#onStatusFilterChanged" />
                              <Button fx:id="refreshRequestsBtn" mnemonicParsing="false" onAction="#refreshRequests" styleClass="secondary-button" text="↻ Refresh" />
                           </children>
                        </HBox>
                        
                        <TableView fx:id="requestsTable" styleClass="table-view" prefHeight="400.0">
                           <columns>
                              <TableColumn fx:id="requestIdCol" prefWidth="80.0" text="ID" />
                              <TableColumn fx:id="requestResourceCol" prefWidth="150.0" text="Resource" />
                              <TableColumn fx:id="requestStatusCol" prefWidth="120.0" text="Status" />
                              <TableColumn fx:id="requestUrgencyCol" prefWidth="100.0" text="Urgency" />
                              <TableColumn fx:id="requestVolunteerCol" prefWidth="120.0" text="Volunteer" />
                              <TableColumn fx:id="requestDateCol" prefWidth="120.0" text="Date" />
                              <TableColumn fx:id="requestActionCol" prefWidth="100.0" text="Actions" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
                  
                  <!-- Available Resources Section -->
                  <VBox spacing="16.0">
                     <children>
                        <HBox spacing="12.0" alignment="CENTER_LEFT">
                           <children>
                              <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                 <image>
                                    <Image url="@../assets/icons/resources.png" />
                                 </image>
                              </ImageView>
                              <Label text="Available Resources" styleClass="heading-3">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        
                        <GridPane hgap="20.0" vgap="20.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <VBox styleClass="resource-card" spacing="16.0">
                                 <children>
                                    <Label fx:id="foodIconLabel" styleClass="resource-icon" prefWidth="48.0" prefHeight="48.0" />
                                    <Label text="Food Assistance" styleClass="resource-title">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Label>
                                    <Label text="Meals, groceries, and food supplies" styleClass="resource-description" wrapText="true" />
                                 </children>
                                 <padding>
                                    <Insets top="32.0" right="28.0" bottom="32.0" left="28.0" />
                                 </padding>
                              </VBox>
                              
                              <VBox styleClass="resource-card" spacing="16.0" GridPane.columnIndex="1">
                                 <children>
                                    <Label fx:id="medicalIconLabel" styleClass="resource-icon" prefWidth="48.0" prefHeight="48.0" />
                                    <Label text="Medical Support" styleClass="resource-title">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Label>
                                    <Label text="Healthcare services and supplies" styleClass="resource-description" wrapText="true" />
                                 </children>
                                 <padding>
                                    <Insets top="32.0" right="28.0" bottom="32.0" left="28.0" />
                                 </padding>
                              </VBox>
                              
                              <VBox styleClass="resource-card" spacing="16.0" GridPane.columnIndex="2">
                                 <children>
                                    <Label fx:id="shelterIconLabel" styleClass="resource-icon" prefWidth="48.0" prefHeight="48.0" />
                                    <Label text="Shelter" styleClass="resource-title">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Label>
                                    <Label text="Temporary housing assistance" styleClass="resource-description" wrapText="true" />
                                 </children>
                                 <padding>
                                    <Insets top="32.0" right="28.0" bottom="32.0" left="28.0" />
                                 </padding>
                              </VBox>
                              
                              <VBox styleClass="resource-card" spacing="16.0" GridPane.rowIndex="1">
                                 <children>
                                    <Label fx:id="clothingIconLabel" styleClass="resource-icon" prefWidth="48.0" prefHeight="48.0" />
                                    <Label text="Clothing" styleClass="resource-title">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Label>
                                    <Label text="Clothes and essential wear" styleClass="resource-description" wrapText="true" />
                                 </children>
                                 <padding>
                                    <Insets top="32.0" right="28.0" bottom="32.0" left="28.0" />
                                 </padding>
                              </VBox>
                              
                              <VBox styleClass="resource-card" spacing="16.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <children>
                                    <Label fx:id="transportationIconLabel" styleClass="resource-icon" prefWidth="48.0" prefHeight="48.0" />
                                    <Label text="Transportation" styleClass="resource-title">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Label>
                                    <Label text="Travel and mobility support" styleClass="resource-description" wrapText="true" />
                                 </children>
                                 <padding>
                                    <Insets top="32.0" right="28.0" bottom="32.0" left="28.0" />
                                 </padding>
                              </VBox>
                              
                              <VBox styleClass="resource-card" spacing="16.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                 <children>
                                    <Label fx:id="educationIconLabel" styleClass="resource-icon" prefWidth="48.0" prefHeight="48.0" />
                                    <Label text="Education" styleClass="resource-title">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Label>
                                    <Label text="Learning materials and tutoring" styleClass="resource-description" wrapText="true" />
                                 </children>
                                 <padding>
                                    <Insets top="32.0" right="28.0" bottom="32.0" left="28.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
                  
               </children>
               <padding>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
