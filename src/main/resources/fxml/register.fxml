<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.communityhub.ui.controllers.RegisterController" styleClass="main-container">
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;">
         <content>
            <HBox alignment="CENTER" style="-fx-min-height: 100%;">
               <children>
                  <VBox alignment="CENTER" maxWidth="520.0" spacing="28.0">
               <children>
                  <!-- Logo & Title -->
                  <VBox alignment="CENTER" spacing="12.0">
                     <children>
                        <Label text="â—‰" style="-fx-font-size: 56px; -fx-font-weight: bold; -fx-text-fill: #3B82F6;" />
                        <Label text="ResoMap" styleClass="heading-2">
                           <font>
                              <Font name="System Bold" size="28.0" />
                           </font>
                        </Label>
                        <Label text="Create Your Account" styleClass="text-secondary">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <!-- Registration Card -->
                  <VBox spacing="18.0" styleClass="card" style="-fx-padding: 36px;">
                     <children>
                        <Label text="Sign Up" styleClass="heading-3">
                           <font>
                              <Font name="System Bold" size="22.0" />
                           </font>
                        </Label>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Username" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <TextField fx:id="usernameField" promptText="Choose a username (3-20 characters)" styleClass="input-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Email" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <TextField fx:id="emailField" promptText="Enter your email address" styleClass="input-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Password" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <PasswordField fx:id="passwordField" promptText="Create a strong password (8+ chars)" styleClass="password-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Confirm Password" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" styleClass="password-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="I want to" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <ComboBox fx:id="roleComboBox" maxWidth="Infinity" promptText="Select your role" styleClass="combo-box" />
                           </children>
                        </VBox>
                        
                        <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true" managed="false" />
                        <Label fx:id="successLabel" style="-fx-text-fill: #10B981; -fx-font-size: 13px; -fx-padding: 8px 12px; -fx-background-color: #D1FAE5; -fx-background-radius: 8px;" visible="false" wrapText="true" managed="false" />
                        
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" maxWidth="Infinity" styleClass="primary-button" text="Create Account" style="-fx-padding: 14px;">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Button>
                        
                        <HBox alignment="CENTER" spacing="6.0">
                           <children>
                              <Label text="Already have an account?" styleClass="text-secondary" />
                              <Hyperlink fx:id="loginLink" onAction="#handleBackToLogin" text="Sign in here" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <ProgressIndicator fx:id="loadingIndicator" visible="false" prefWidth="40.0" prefHeight="40.0" />
                  </children>
                     <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>