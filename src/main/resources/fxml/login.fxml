<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.communityhub.ui.controllers.LoginController" styleClass="main-container">
   <center>
      <VBox alignment="CENTER" maxWidth="480.0" spacing="32.0">
         <children>
            <!-- Logo & Title -->
            <VBox alignment="CENTER" spacing="12.0">
               <children>
                  <Label text="ðŸŒ" style="-fx-font-size: 48px;" />
                  <Label text="Community Resource Hub" styleClass="heading-2">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Label text="Connect. Share. Support." styleClass="text-secondary">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <!-- Login Card -->
            <VBox spacing="20.0" styleClass="card" style="-fx-padding: 36px;">
               <children>
                  <Label text="Sign In" styleClass="heading-3">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Username" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                        <TextField fx:id="usernameField" promptText="Enter your username" styleClass="input-field" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Password" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="password-field" />
                     </children>
                  </VBox>
                  
                  <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true" managed="false" />
                  
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" maxWidth="Infinity" styleClass="primary-button" text="Sign In" style="-fx-padding: 14px;">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  
                  <HBox alignment="CENTER" spacing="6.0">
                     <children>
                        <Label text="Don't have an account?" styleClass="text-secondary" />
                        <Hyperlink fx:id="registerLink" onAction="#handleRegister" text="Register here" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <ProgressIndicator fx:id="loadingIndicator" visible="false" prefWidth="40.0" prefHeight="40.0" />
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>