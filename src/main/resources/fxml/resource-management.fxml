<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.communityhub.ui.controllers.ResourceManagementController">
   <content>
      <VBox spacing="32.0">
         <children>
            
            <!-- Page Header -->
            <VBox spacing="16.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <Label text="ðŸ“¦" styleClass="section-icon" />
                        <Label text="Resource Management" styleClass="section-heading" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="addResourceButton" mnemonicParsing="false" onAction="#handleAddResource" styleClass="primary-button" text="âž• Add Resource" />
                        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" styleClass="secondary-button" text="ðŸ”„ Refresh" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Filters Section -->
            <VBox spacing="16.0" styleClass="card" style="-fx-padding: 24px;">
               <children>
                  <Label text="Filters" styleClass="heading-3">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="16.0" alignment="CENTER_LEFT">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Search" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <TextField fx:id="searchField" promptText="Search resources..." styleClass="input-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Category" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <ComboBox fx:id="categoryFilter" prefWidth="180.0" promptText="All Categories" styleClass="combo-box" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text=" " style="-fx-font-size: 13px;" />
                              <CheckBox fx:id="availableOnlyFilter" mnemonicParsing="false" text="Available Only" style="-fx-font-size: 13px;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Resources Table -->
            <VBox spacing="16.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <Label text="Resources List" styleClass="heading-3">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="recordCountLabel" text="0 resources" styleClass="text-secondary" />
                     </children>
                  </HBox>
                  
                  <TableView fx:id="resourceTable" styleClass="table-view" prefHeight="500.0" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="nameColumn" minWidth="120.0" prefWidth="180.0" text="Name">
                           <cellValueFactory>
                              <PropertyValueFactory property="name" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="categoryColumn" minWidth="100.0" prefWidth="140.0" text="Category">
                           <cellValueFactory>
                              <PropertyValueFactory property="category" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="descriptionColumn" minWidth="150.0" prefWidth="240.0" text="Description">
                           <cellValueFactory>
                              <PropertyValueFactory property="description" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="quantityColumn" minWidth="80.0" prefWidth="100.0" text="Quantity">
                           <cellValueFactory>
                              <PropertyValueFactory property="quantity" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="locationColumn" minWidth="120.0" prefWidth="180.0" text="Location">
                           <cellValueFactory>
                              <PropertyValueFactory property="location" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="statusColumn" minWidth="100.0" prefWidth="130.0" text="Status">
                           <cellValueFactory>
                              <PropertyValueFactory property="availabilityStatus" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="actionsColumn" minWidth="100.0" prefWidth="140.0" text="Actions" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <Label fx:id="statusLabel" text="Ready" styleClass="text-secondary" />
                        <Region HBox.hgrow="ALWAYS" />
                        <ProgressIndicator fx:id="loadingIndicator" visible="false" prefWidth="24.0" prefHeight="24.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
         </children>
         <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>