<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.communityhub.ui.controllers.ResourcesController" spacing="24.0" style="-fx-background-color: #F8FAFB;">
   <children>
      <!-- Header Section -->
      <VBox spacing="16.0" style="-fx-background-color: white; -fx-padding: 32px; -fx-background-radius: 16px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 20, 0, 0, 4);">
         <children>
            <HBox spacing="12.0" alignment="CENTER_LEFT">
               <children>
                  <ImageView fitHeight="36.0" fitWidth="36.0" preserveRatio="true">
                     <image>
                        <Image url="@../assets/icons/resources.png" />
                     </image>
                  </ImageView>
                  <Label text="Available Resources" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0D253F;">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label text="Browse and request community resources. Click on any resource to create a request." style="-fx-font-size: 16px; -fx-text-fill: #64748B;" />
            
            <!-- Search and Filter Bar -->
            <HBox spacing="16.0" alignment="CENTER_LEFT">
               <children>
                  <TextField fx:id="searchField" promptText="Search resources..." style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-padding: 12px 16px; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: #E2E8F0;" />
                  <ComboBox fx:id="categoryFilter" promptText="All Categories" style="-fx-pref-width: 200px;" />
                  <Button fx:id="createRequestBtn" text="âœ¨ Create New Request" styleClass="cta-button" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 14px 28px;" onAction="#handleCreateNewRequest" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Resources Grid -->
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;">
         <content>
            <VBox fx:id="resourcesContainer" spacing="20.0">
               <children>
                  <!-- Resource Categories -->
                  <GridPane fx:id="resourcesGrid" hgap="24.0" vgap="24.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" />
                     </columnConstraints>
                  </GridPane>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
</VBox>