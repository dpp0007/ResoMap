<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.communityhub.ui.controllers.AdminDashboardController">
   <top>
      <VBox styleClass="modern-header">
         <children>
            <!-- Main Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="32.0" styleClass="navbar">
               <children>
                  <!-- Logo Section -->
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <Label text="⚙" styleClass="app-logo" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                        <VBox spacing="2.0">
                           <children>
                              <Label text="ResoMap" styleClass="app-title" />
                              <Label text="Admin Portal" styleClass="app-subtitle" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Navigation Items -->
                  <HBox spacing="8.0" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="dashboardBtn" text="▣ Dashboard" styleClass="nav-button, active" onAction="#showDashboard" focusTraversable="true" />
                        <Button fx:id="resourcesButton" mnemonicParsing="false" onAction="#showResourceManagement" styleClass="nav-button" text="■ Resources" focusTraversable="true" />
                        <Button fx:id="usersButton" mnemonicParsing="false" onAction="#showUserManagement" styleClass="nav-button" text="⚉ Users" focusTraversable="true" />
                        <Button fx:id="requestsButton" mnemonicParsing="false" onAction="#showRequestOverview" styleClass="nav-button" text="☰ Requests" focusTraversable="true" />
                        <Button fx:id="reportsButton" mnemonicParsing="false" onAction="#showReports" styleClass="nav-button" text="▤ Reports" focusTraversable="true" />
                        <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#showSettings" styleClass="nav-button" text="⚙ Settings" focusTraversable="true" />
                     </children>
                  </HBox>
                  
                  <!-- User Section -->
                  <HBox alignment="CENTER_RIGHT" spacing="16.0">
                     <children>
                        <VBox alignment="CENTER_RIGHT" spacing="2.0">
                           <children>
                              <Label fx:id="welcomeLabel" text="Welcome, Admin" styleClass="user-name" />
                              <Label text="System Administrator" styleClass="user-role" />
                           </children>
                        </VBox>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="⎋ Logout" focusTraversable="true" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <StackPane fx:id="contentPane">
         <children>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;">
               <content>
                  <VBox spacing="32.0">
                     <children>
                        
                        <!-- Hero Action Section -->
                        <VBox alignment="CENTER" spacing="24.0" styleClass="hero-section">
                           <children>
                              <Label text="System Administration" styleClass="hero-title" />
                              <Label text="Manage resources, users, and monitor system activity" styleClass="hero-subtitle" />
                              <HBox alignment="CENTER" spacing="16.0">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#showResourceManagement" styleClass="cta-button" text="Manage Resources" focusTraversable="true">
                                       <graphic>
                                          <Label text="■" styleClass="button-icon" />
                                       </graphic>
                                    </Button>
                                    <Button mnemonicParsing="false" onAction="#showRequestOverview" styleClass="cta-button" text="View Requests" focusTraversable="true">
                                       <graphic>
                                          <Label text="☰" styleClass="button-icon" />
                                       </graphic>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <!-- Enhanced Statistics Dashboard -->
                        <VBox spacing="20.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="12.0">
                                 <children>
                                    <Label text="▤" styleClass="section-icon" />
                                    <Label text="System Overview" styleClass="section-heading" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" onAction="#refreshData" styleClass="secondary-button" text="↻ Refresh" />
                                 </children>
                              </HBox>
                              
                              <GridPane hgap="24.0" vgap="24.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
                                    <!-- Total Resources Card -->
                                    <VBox styleClass="modern-stat-card, stat-primary" spacing="16.0" alignment="CENTER">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="■" styleClass="stat-icon" />
                                                <Label fx:id="totalResourcesLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="Total Resources" styleClass="stat-title" />
                                                <Label text="All system resources" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- Total Users Card -->
                                    <VBox styleClass="modern-stat-card, stat-secondary" spacing="16.0" alignment="CENTER" GridPane.columnIndex="1">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="⚉" styleClass="stat-icon" />
                                                <Label fx:id="totalUsersLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="Total Users" styleClass="stat-title" />
                                                <Label text="Registered community members" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- Active Requests Card -->
                                    <VBox styleClass="modern-stat-card, stat-primary" spacing="16.0" alignment="CENTER" GridPane.columnIndex="2">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="☰" styleClass="stat-icon" />
                                                <Label fx:id="activeRequestsLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="Active Requests" styleClass="stat-title" />
                                                <Label text="Currently in progress" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- Pending Requests Card -->
                                    <VBox styleClass="modern-stat-card, stat-warning" spacing="16.0" alignment="CENTER" GridPane.rowIndex="1">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="⧗" styleClass="stat-icon" />
                                                <Label fx:id="pendingRequestsLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="Pending Requests" styleClass="stat-title" />
                                                <Label text="Awaiting assignment" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- Critical Requests Card -->
                                    <VBox styleClass="modern-stat-card, stat-danger" spacing="16.0" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="⚠" styleClass="stat-icon" />
                                                <Label fx:id="criticalRequestsLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="Critical Requests" styleClass="stat-title" />
                                                <Label text="Urgent attention needed" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- Available Resources Card -->
                                    <VBox styleClass="modern-stat-card, stat-success" spacing="16.0" alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="✓" styleClass="stat-icon" />
                                                <Label fx:id="availableResourcesLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="Available Resources" styleClass="stat-title" />
                                                <Label text="Ready for distribution" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                        
                     </children>
                     <padding>
                        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </StackPane>
   </center>
</BorderPane>