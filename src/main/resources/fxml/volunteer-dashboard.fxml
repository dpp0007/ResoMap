<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.communityhub.ui.controllers.VolunteerDashboardController">
   
   <top>
      <VBox styleClass="modern-header">
         <children>
            <!-- Main Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="32.0" styleClass="navbar">
               <children>
                  <!-- Logo Section -->
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <Label text="♥" styleClass="app-logo" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #EF4444;" />
                        <VBox spacing="2.0">
                           <children>
                              <Label text="ResoMap" styleClass="app-title" />
                              <Label text="Volunteer Portal" styleClass="app-subtitle" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Navigation Items -->
                  <HBox spacing="8.0" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="dashboardBtn" text="▣ Dashboard" styleClass="nav-button, active" onAction="#showDashboard" focusTraversable="true" />
                        <Button fx:id="availableRequestsBtn" text="☰ Available Requests" styleClass="nav-button" onAction="#showAvailableRequests" focusTraversable="true" />
                        <Button fx:id="myAssignmentsBtn" text="✓ My Assignments" styleClass="nav-button" onAction="#showMyAssignments" focusTraversable="true" />
                     </children>
                  </HBox>
                  
                  <!-- User Section -->
                  <HBox alignment="CENTER_RIGHT" spacing="16.0">
                     <children>
                        <VBox alignment="CENTER_RIGHT" spacing="2.0">
                           <children>
                              <Label fx:id="welcomeLabel" text="Welcome, Volunteer" styleClass="user-name" />
                              <Label text="Help make a difference in your community" styleClass="user-role" />
                           </children>
                        </VBox>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="⎋ Logout" focusTraversable="true" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <StackPane fx:id="contentPane">
         <children>
            <!-- Default Dashboard View -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;">
               <content>
                  <VBox spacing="32.0">
                     <children>
                        
                        <!-- Hero Action Section -->
                        <VBox alignment="CENTER" spacing="24.0" styleClass="hero-section">
                           <children>
                              <Label text="Ready to help?" styleClass="hero-title" />
                              <Label text="Browse available requests and make a difference in your community" styleClass="hero-subtitle" />
                              <Button mnemonicParsing="false" onAction="#showAvailableRequests" 
                                      styleClass="cta-button" text="View Available Requests" focusTraversable="true">
                                 <graphic>
                                    <Label text="☰" styleClass="button-icon" />
                                 </graphic>
                              </Button>
                           </children>
                        </VBox>
                        
                        <!-- Statistics Dashboard -->
                        <VBox spacing="20.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="12.0">
                                 <children>
                                    <Label text="▤" styleClass="section-icon" />
                                    <Label text="Your Overview" styleClass="section-heading" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" onAction="#refreshData" styleClass="secondary-button" text="↻ Refresh" />
                                 </children>
                              </HBox>
                              
                              <HBox spacing="24.0">
                                 <children>
                                    <!-- Available Requests Card -->
                                    <VBox styleClass="modern-stat-card, stat-primary" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="☰" styleClass="stat-icon" />
                                                <Label fx:id="availableRequestsLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="Available Requests" styleClass="stat-title" />
                                                <Label text="Community requests waiting for help" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- My Assignments Card -->
                                    <VBox styleClass="modern-stat-card, stat-secondary" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="✓" styleClass="stat-icon" />
                                                <Label fx:id="myAssignmentsLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="My Assignments" styleClass="stat-title" />
                                                <Label text="Your active volunteer tasks" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- Completed Requests Card -->
                                    <VBox styleClass="modern-stat-card, stat-success" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                                       <children>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="✅" styleClass="stat-icon" />
                                                <Label fx:id="completedRequestsLabel" text="0" styleClass="stat-number-large" />
                                             </children>
                                          </VBox>
                                          <VBox alignment="CENTER" spacing="4.0">
                                             <children>
                                                <Label text="Completed Requests" styleClass="stat-title" />
                                                <Label text="Your impact on the community" styleClass="stat-description" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <!-- Quick Actions -->
                        <VBox spacing="16.0">
                           <children>
                              <Label text="Quick Actions" styleClass="heading-3">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              
                              <HBox spacing="16.0">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#showAvailableRequests" 
                                            styleClass="action-card-button" text="Browse Requests" prefWidth="200.0" prefHeight="80.0">
                                       <graphic>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="☰" style="-fx-font-size: 32px;" />
                                                <Label text="Browse Requests" style="-fx-font-weight: bold;" />
                                             </children>
                                          </VBox>
                                       </graphic>
                                    </Button>
                                    
                                    <Button mnemonicParsing="false" onAction="#showMyAssignments" 
                                            styleClass="action-card-button" text="My Assignments" prefWidth="200.0" prefHeight="80.0">
                                       <graphic>
                                          <VBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="✓" style="-fx-font-size: 32px;" />
                                                <Label text="My Assignments" style="-fx-font-weight: bold;" />
                                             </children>
                                          </VBox>
                                       </graphic>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                     </children>
                     <padding>
                        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </StackPane>
   </center>
</BorderPane>
