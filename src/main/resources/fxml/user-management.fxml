<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.communityhub.ui.controllers.PlaceholderContentController">
   <content>
      <VBox spacing="32.0">
         <children>
            
            <!-- Page Header -->
            <VBox spacing="16.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <Label text="ðŸ‘¥" styleClass="section-icon" />
                        <Label text="User Management" styleClass="section-heading" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="addUserBtn" mnemonicParsing="false" styleClass="primary-button" text="âž• Add User" />
                        <Button fx:id="refreshUsersBtn" mnemonicParsing="false" styleClass="secondary-button" text="ðŸ”„ Refresh" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Filters Section -->
            <VBox spacing="16.0" styleClass="card" style="-fx-padding: 24px;">
               <children>
                  <Label text="Filters" styleClass="heading-3">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="16.0" alignment="CENTER_LEFT">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Search" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <TextField fx:id="userSearchField" promptText="Search users..." styleClass="input-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Role" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                              <ComboBox fx:id="roleFilterCombo" promptText="All Roles" styleClass="combo-box" prefWidth="180.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Statistics Cards -->
            <VBox spacing="20.0">
               <children>
                  <Label text="User Statistics" styleClass="heading-3">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="24.0">
                     <children>
                        <VBox styleClass="modern-stat-card, stat-primary" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="8.0">
                                 <children>
                                    <Label text="ðŸ‘¥" styleClass="stat-icon" />
                                    <Label fx:id="totalUsersCount" text="0" styleClass="stat-number-large" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="4.0">
                                 <children>
                                    <Label text="Total Users" styleClass="stat-title" />
                                    <Label text="All registered users" styleClass="stat-description" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        
                        <VBox styleClass="modern-stat-card, stat-success" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="8.0">
                                 <children>
                                    <Label text="âœ…" styleClass="stat-icon" />
                                    <Label fx:id="activeUsersCount" text="0" styleClass="stat-number-large" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="4.0">
                                 <children>
                                    <Label text="Active Users" styleClass="stat-title" />
                                    <Label text="Currently active" styleClass="stat-description" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        
                        <VBox styleClass="modern-stat-card, stat-secondary" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="8.0">
                                 <children>
                                    <Label text="ðŸ¤" styleClass="stat-icon" />
                                    <Label fx:id="volunteersCount" text="0" styleClass="stat-number-large" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="4.0">
                                 <children>
                                    <Label text="Volunteers" styleClass="stat-title" />
                                    <Label text="Helping community" styleClass="stat-description" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        
                        <VBox styleClass="modern-stat-card, stat-primary" spacing="16.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="8.0">
                                 <children>
                                    <Label text="ðŸ¡" styleClass="stat-icon" />
                                    <Label fx:id="requestersCount" text="0" styleClass="stat-number-large" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="4.0">
                                 <children>
                                    <Label text="Requesters" styleClass="stat-title" />
                                    <Label text="Seeking assistance" styleClass="stat-description" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Users Table -->
            <VBox spacing="16.0">
               <children>
                  <Label text="Users List" styleClass="heading-3">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <TableView fx:id="usersTable" styleClass="table-view" prefHeight="500.0" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="userIdCol" minWidth="60.0" prefWidth="80.0" text="User ID" />
                        <TableColumn fx:id="usernameCol" minWidth="100.0" prefWidth="140.0" text="Username" />
                        <TableColumn fx:id="displayNameCol" minWidth="120.0" prefWidth="180.0" text="Display Name" />
                        <TableColumn fx:id="emailCol" minWidth="150.0" prefWidth="220.0" text="Email" />
                        <TableColumn fx:id="roleCol" minWidth="80.0" prefWidth="120.0" text="Role" />
                        <TableColumn fx:id="statusCol" minWidth="80.0" prefWidth="110.0" text="Status" />
                        <TableColumn fx:id="createdAtCol" minWidth="100.0" prefWidth="140.0" text="Created" />
                        <TableColumn fx:id="actionsCol" minWidth="100.0" prefWidth="140.0" text="Actions" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            
         </children>
         <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
